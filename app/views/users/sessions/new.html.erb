<div class='row cont-centered'>
  <div class='callout user-form'> 	
	  <h2>Log in</h2>
	  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="field">
	    <%= f.label :email %>
	    <%= f.email_field :email, autofocus: true, class: 'simple-input' %>
	  </div> <br/>

	  <div class="field">
	    <%= f.label :password %>
	    <%= f.password_field :password, autocomplete: "off", class: 'simple-input' %>
	  </div> <br/>

	  <% if devise_mapping.rememberable? -%>
	    <div class="field">
	      <%= f.check_box :remember_me %>
	      <%= f.label :remember_me %>
	    </div>
	  <% end %>
	  <br/>
	  <div class="actions">
	    <%= f.submit "Log in", class:'button primary' %>
	  </div>
	<% end %>
	 <br/>

	<%= link_to 'Sign Up', '#',data: {:'open' => 'user-join'}%><br/>

	<%= link_to 'Forgot your password?', '#',data: {:'open' => 'user-password'}%><br/>

	<%= link_to "Didn't receive confirmation instructions", '#', data: {:'open' => 'user-confirmation'} %>

  </div>
</div>