<div class='row cont-centered'>
  <div class='callout user-form'> 

		<h2>Forgot your password?</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field">
		    <%= f.label :email %>
		    <%= f.email_field :email, autofocus: true, class: 'simple-input' %>
		  </div>

		  <br/>

		  <div class="actions">
		    <%= f.submit "Send password reset instructions", class: 'button primary' %>
		  </div>
		<% end %>

		<%= link_to "Log In", '#', data: {:'open' => 'user-login'} %><br/>
		<%= link_to 'Sign Up', '#',data: {:'open' => 'user-join'}%><br/>
	</div>
</div>