<div class="article-info">
	<div>  
		<span class="">By </span>
		<span class="author-name">
		<%= link_to article.writer.fullname, writers_path(id: article.writer.id) %></span>
		<span class="article-date">
			- <%= article.created_at.strftime("%a, %d %b %Y") %>
		</span>
	</div>	

	<div class='article-stats'>
		<div class='a-stat'>
		  <i class='fi-eye'></i>	
		  <span><%= View.where(viewable_id: article.id, viewable_type: 'Article').count%></span>
		</div>

		<div class='a-stat'>	  
		 	<i class='fi-comment'></i>
		 	<span><%= Comment.where(commentable_id: article.id, commentable_type: 'Article').count %></span>
		</div>	
	</div>	
</div>
