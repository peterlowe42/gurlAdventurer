<div class="row">

<div class="small-12 medium-9 columns" id="article-div">
	<h1 class="article-title"><%= @article.title %></h1>
	<div class="article-info">
		<div class="article-author">
			<span class="">By </span>
			<span class="author-name"><%= @article.author %></span>
		</div>
		<div class="article-date">
			- <%= @article.created_at.strftime("%a, %d %b %Y") %>
		</div>
	</div>
	<div class="image-box small-12 columns">
		<%= image_tag @article.image.url(:large) %>
	</div>
	<div class="article-body">
		<%= simple_format(@article.body)  %>
	</div>
</div>

<div class="medium-3 columns hide-for-small-only" id="sticky-col">	
 	<div class="grey-tab">
 		Related Articles
 	</div>
 	<% @related_articles.each do |post| %>
 		<div class="index-box">
			<%= link_to post do %>
				<%= image_tag post.image.url(:medium) %>
				<div class="title-box">
					<%= post.title %>
				</div>
			<% end %>
		</div>
		<div class="vertical-spacer"></div>
 	<% end %> 
</div>

<div id="comment-container">
	<h4>Comments</h4>
	<%= render 'comments/form' %>
</div>
	
