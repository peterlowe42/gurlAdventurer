<div class="row">

<div class="small-12 medium-9 columns" id="article-div">
	<h1 class="article-title"><%= @article.title %></h1>
	<div class="article-info">
		<div class="article-author">
			<span class="">By </span>
			<span class="author-name"><%= @article.author %></span>
		</div>
		<div class="article-date">
			- <%= @article.created_at.strftime("%a, %d %b %Y") %>
		</div>
	</div>
	<div class="image-box small-12 columns">
		<%= image_tag @article.image.url(:large) %>
	</div>
	<div class="article-body">
		<%= simple_format(@article.body)  %>
	</div>
	<div class='header-divider'>
	Comments
	</div>

	<div id="comment-container">
		<% @comments.each do |comment| %>
				<% user = User.find(comment.user_id)%>
			<div class='comment-box row'>

				<div class='small-1 columns'>
					<%= image_tag 'Blank_Avatar', class:'avatar-small' %>
				</div>

				<div class="small-11 columns">
					<div class="row collapse">
						<span class='bold'><%= user.username %></span>
						<span class='pad-left small-grey'><%= comment.created_at.strftime("%a, %d %b %Y")%></span>
					</div>
					<div class="row collapse">
					  <%= comment.body %>
					</div>	
				</div>
			</div>
		<% end %>

	</div>
	<div class='rowcollapse'>
		<%= render 'comments/form' %>	  
	</div>			
</div>



<div class="medium-3 columns hide-for-small-only" id="sticky-col">	
 	<div class="grey-tab">
 		Related Articles
 	</div>
 	<% @related_articles.each do |post| %>
 		<div class="index-box">
			<%= link_to post do %>
				<%= image_tag post.image.url(:medium) %>
				<div class="title-box">
					<%= post.title %>
				</div>
			<% end %>
		</div>
		<div class="vertical-spacer"></div>
 	<% end %> 
</div>
</div>



