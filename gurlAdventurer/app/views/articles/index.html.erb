
<div class="row">

	<div class="small-12 medium-9 columns">

		<div class="row collapse" id="feature">
			<div class="medium-6 columns">
				<%= link_to @feature do %>
					<%= image_tag @feature.image.url(:medium), class: "feature-img" %>
				<% end %>
			</div>

			<div class="medium-6 columns" id="feature-text">
				<%= link_to @feature do %>
					<h3><%= @feature.title %></h3>
				<% end %>

				<div id="preview-text">
					<%= @feature.body %>
				</div>

			</div>
			
		</div>


		<div class="row small-up-1 medium-up-2 large-up-3">

			<% @articles.each do |article| %>

				<div class="column column-block index-box">
					<%= link_to article_path(id: article.id ) do %>
						<%= image_tag article.image.url(:medium) %>
						<div class="title-box">
							<%= article.title %>
						</div>
					<% end %>
				</div>

			<% end %>

		</div>

	</div>

	<div class="medium-3 columns hide-for-small-only">
	 	
	 	<div class="grey-tab">
	 		Sponsored Links
	 	</div>

	 	<%= image_tag 'placeholder' %>
	 	<br><br>
	 	<%= image_tag 'placeholder' %>
	 	<br><br>
	 	<%= image_tag 'placeholder' %>
	 	<br><br>
	 	<%= image_tag 'placeholder' %>
	</div>

</div>

