<div class="row">
		<div class="row collapse" id="feature">
			<%= render partial: 'articles/header_block_3', locals: { articles: @articles.to_a[0..3] } %>
			
		</div>

		
<div class="row">

	<div class="small-12 medium-9 columns">



		<div class="row small-up-1 medium-up-2 large-up-3">

			<% @articles.each do |article| %>

				<div class="column column-block index-box">
					<% category = Category.where(id: article.category_id).to_a[0] %>
					<%= link_to category_path(id: category.id) do %>
						<div class="category-label">
							<%= category.title %>
						</div>
					<% end %>
					<%= link_to article_path(id: article.id ) do %>
						<%= image_tag article.image.url(:medium) %>
						<div class="title-box">
							<%= article.title %>
						</div>
					<% end %>
				</div>

			<% end %>

		</div>

	</div>

	<div class="medium-3 columns hide-for-small-only">
	 	
	 	<div class="grey-tab">
	 		Sponsored Links
	 	</div>

	 	<%= image_tag 'placeholder' %>
	 	<br><br>
	 	<%= image_tag 'placeholder' %>
	 	<br><br>
	 	<%= image_tag 'placeholder' %>
	 	<br><br>
	 	<%= image_tag 'placeholder' %>
	</div>

</div>

