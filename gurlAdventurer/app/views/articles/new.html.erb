

<div class='large-8 large-centered'>

	<div class='callout'>
		<%= form_for :article, url: articles_path, html: { multipart: true } do |f| %>
			<p>
				<%= f.label :title %><br>
				<%=f.text_field :title%> 
			</p>

			<p>
				<%= f.label :image %><br>
				<%=f.file_field :image%> 
			</p>

			<p>
				<%= f.label :body %><br>
				<%= f.text_area :body %>
			</p>

			<p>
				<%= f.label :author %><br>
				<%= f.text_field :author %>
			</p>

			<p>
				<%= f.submit %>
			</p>

		<% end %>
	</div>


</div>